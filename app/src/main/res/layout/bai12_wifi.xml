<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Danh sách wifi"
        android:textSize="20dp"
        android:textColor="#000000"
        android:textStyle="bold"/>
    <Spinner
        android:id="@+id/wifi_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"/>

<!--    <Button-->
<!--        android:layout_marginBottom="4dp"-->
<!--        android:id="@+id/btn_wifi_list"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="Danh sách kết nối wifi"/>-->

    <Button
        android:layout_marginBottom="4dp"
        android:id="@+id/btn_refresh_wifi_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Làm mới danh sách wifi"/>

    <Button
        android:layout_marginBottom="4dp"
        android:id="@+id/btn_network_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kiểm tra thông tin kết nối"/>

    <TextView
        android:id="@+id/network_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#000000"/>
</LinearLayout>